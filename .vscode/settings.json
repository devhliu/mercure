{
    "python.linting.enabled": true,
    "html.format.enable": false,
    "cSpell.words": [
        "mercure",
        "starlette",
        "distro",
        "uvicorn",
        "dicom"
    ],
    // "python.formatting.blackArgs": [
    //     "--line-length=120  "
